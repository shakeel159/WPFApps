<UserControl x:Class="WeatherApp.View.UserControls.BottomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.View.UserControls"
             xmlns:InfoTab="clr-namespace:WeatherApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,0">
            <TextBlock Grid.Column="0" Text=" Yesterday" TextAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="0" Grid.Row="1">
            <InfoTab:InfoTexts Grid.Column="0" Grid.Row="1"/>
        </Border>
            <InfoTab:InfoTexts Grid.Column="0" Grid.Row="1"/>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="1" Grid.Row="0">
            <TextBlock Grid.Column="1" Text=" Today" TextAlignment="Center" FontSize="20"/>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="1" Grid.Row="1">
            <InfoTab:InfoTexts Grid.Column="1" Grid.Row="1"/>
        </Border>
        <TextBlock Grid.Column="2" Text=" Tomorrow" TextAlignment="Center" FontSize="20"/>
        <InfoTab:InfoTexts Grid.Column="2" Grid.Row="1"/>
    </Grid>
</UserControl>
