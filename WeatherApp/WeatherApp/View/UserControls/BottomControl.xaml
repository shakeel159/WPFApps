<UserControl x:Class="WeatherApp.View.UserControls.BottomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.View.UserControls"
             xmlns:InfoTab="clr-namespace:WeatherApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Name="YesterdaysWether" Text="Yesterday" HorizontalContentAlignment ="Center" FontSize="20"/>
        <InfoTab:InfoTexts Grid.Column="0" Grid.Row="1"/>
        <TextBox Grid.Column="1" Name="TodaysWether" Text="Today" HorizontalContentAlignment ="Center" FontSize="20"/>
        <InfoTab:InfoTexts Grid.Column="1" Grid.Row="1"/>
        <TextBox Grid.Column="2" Name="TommorowsWether" Text="Tomorrow" HorizontalContentAlignment ="Center" FontSize="20"/>
        <InfoTab:InfoTexts Grid.Column="2" Grid.Row="1"/>
    </Grid>
</UserControl>
