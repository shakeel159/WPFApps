<UserControl x:Class="WeatherApp.View.UserControls.InfoTexts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="tbDate" Text="" Grid.Row="1" FontSize="16" Margin="5,0,0,0"/>
        <TextBlock Name="tbTemp" Text="Temp: N/A" Grid.Row="2" FontSize="16" Margin="5,0,0,0"/>
        <TextBlock Name="tbWind" Text="Wind: N/A" Grid.Row="3" FontSize="16" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
